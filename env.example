# =============================================================================
# BUS NER MODEL CONFIGURATION
# =============================================================================

# Base Model
BUS_NER_BASE_MODEL=microsoft/deberta-v3-small
BUS_NER_MODEL_TYPE=DeBERTa v3 Small (microsoft/deberta-v3-small)

# Paths
BUS_NER_MODEL_PATH=models/bus_ner_deberta_v3_small_3.0
BUS_NER_ONNX_MODEL_PATH=models/bus_ner_deberta_v3_small_3.0/model.onnx
BUS_NER_DATA_PATH=data/training_data_bio.json
BUS_NER_OUTPUT_DIR=models/bus_ner_deberta_v3_small_3.0

# API Configuration
BUS_NER_USE_ONNX=false

# =============================================================================
# TRAINING HYPERPARAMETERS
# =============================================================================

# Core Training Settings
BUS_NER_EPOCHS=5
BUS_NER_BATCH_SIZE=16
BUS_NER_LEARNING_RATE=5e-5
BUS_NER_SEED=42

# Advanced Training Settings
BUS_NER_WARMUP_RATIO=0.05
BUS_NER_WEIGHT_DECAY=0.02
BUS_NER_MAX_GRAD_NORM=1.0
BUS_NER_LR_SCHEDULER_TYPE=linear

# Evaluation and Checkpointing
BUS_NER_EVAL_STRATEGY=epoch
BUS_NER_SAVE_STRATEGY=epoch
BUS_NER_SAVE_TOTAL_LIMIT=2
BUS_NER_EARLY_STOPPING_PATIENCE=3
BUS_NER_METRIC_FOR_BEST_MODEL=f1

# Performance Settings
BUS_NER_DATALOADER_NUM_WORKERS=4
BUS_NER_LOGGING_STEPS=100
